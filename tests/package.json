{
  "name": "ai-commerce-tests",
  "version": "1.0.0",
  "description": "Test suite for AI-Agent Commerce Platform",
  "private": true,
  "scripts": {
    "test": "npm run test:unit && npm run test:api && npm run test:agent",
    "test:unit": "jest --config=config/jest.config.js --selectProjects=unit",
    "test:integration": "jest --config=config/jest.config.js --selectProjects=integration",
    "test:api": "jest --config=config/jest.config.js --selectProjects=api",
    "test:agent": "jest --config=config/jest.config.js --selectProjects=agent",
    "test:e2e": "playwright test --config=config/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=config/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config=config/playwright.config.ts --debug",
    "test:performance": "k6 run config/k6-load-test.js",
    "test:coverage": "jest --config=config/jest.config.js --coverage",
    "test:watch": "jest --config=config/jest.config.js --watch",
    "test:ci": "jest --config=config/jest.config.js --ci --coverage --maxWorkers=2",
    "setup": "bash scripts/setup-test-env.sh",
    "fixtures:generate": "node scripts/generate-fixtures.js",
    "report:merge": "npx playwright merge-reports reports/playwright-report",
    "lint": "eslint . --ext .ts,.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.41.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.0",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
